<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/native_outer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/background"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/native_layout"
            android:layout_width="match_parent"
            android:layout_height="714dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/background">

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:background="@color/purple"
                android:text="click"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageview"
                android:layout_marginTop="14dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text_native"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/button6"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="24dp"
                android:text="This text boxt contain the content."
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/ad_indicative"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/pic7" />

            <TextView
                android:id="@+id/title_native"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/imageview"
                android:layout_toStartOf="@id/ad_indicative"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textSize="39sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
